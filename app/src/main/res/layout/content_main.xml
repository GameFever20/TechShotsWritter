<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="techshot.writter.app.techshotswritter.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/main_newsImage_imageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"

            android:onClick="onImageClick" />

        <EditText
            android:id="@+id/main_newsTitle_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="News Title"

            />

        <EditText
            android:id="@+id/main_newsDescription_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="News Description"
            android:lines="10"
            android:maxLines="30" />

        <EditText
            android:id="@+id/main_newsTag_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="tag"

            />

        <EditText
            android:id="@+id/main_newsSource_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Source"

            />

        <EditText
            android:id="@+id/main_newsSourceLink_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Source link"

            />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onUploadClick"
            android:text="Upload" />

    </LinearLayout>


</ScrollView>
